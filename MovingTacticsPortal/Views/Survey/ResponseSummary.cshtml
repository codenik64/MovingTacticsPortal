@model IEnumerable<MovingTactics.Portal.Models.ViewModels.ResponseSummaryViewModel>

<h2 class="text-center">@Model.FirstOrDefault().Survey</h2>
<h6 class="text-center"><b>Taken By:</b>&nbsp; @Model.FirstOrDefault().Member</h6>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            Response
        </th>
        <th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Question)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ResponseValue)
    </td>

    <td>
        @Html.ActionLink("Media", "MediaSummary", new { id = item.QuestionId }, new {@class = "btn btn-outline-dark" })
    </td>
</tr>
    }

</table>
<a href="javascript:window.print()" class="print-button btn btn-outline-dark">Screenshot Summary</a>
