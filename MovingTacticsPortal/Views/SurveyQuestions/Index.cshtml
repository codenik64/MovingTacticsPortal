@model IEnumerable<MovingTactics.Portal.Models.SurveyModule.SurveyQuestions>

<h2>Add Questions</h2>
<br/>
<p>
    <a href="@Url.Action("Create","SurveyQuestions")" class="btn btn-outline-primary">Add Question</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuestionBody)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SurveyId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionBody)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SurveyId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemberId)
        </td>

    </tr>
}

</table>
